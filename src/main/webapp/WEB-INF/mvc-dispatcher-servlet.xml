<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc.xsd">

    <context:component-scan base-package="com.springapp.mvc"/>
    <mvc:annotation-driven />
    <mvc:resources mapping="/images/*" location="/images/" />
    <mvc:resources mapping="/scripts/**" location="/scripts/" />

    <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="prefix" value="/WEB-INF/pages/"/>
        <property name="suffix" value=".jsp"/>
    </bean>

    <bean id="calculator" class="com.springapp.mvc.web.model.VacationCalculator" />
    <bean id="employeeService" class="com.springapp.mvc.web.service.EmployeeService" />
    <bean id="salesForceParserService" class="com.springapp.mvc.web.service.SalesForceParserService" />
    <bean id="dateParserService" class="com.springapp.mvc.web.service.DateParserService" />
    <bean id="personalDaysCalculator" class="com.springapp.mvc.web.model.PersonalDaysCalculator" />



</beans>